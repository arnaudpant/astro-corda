---
import Sections from "../ui/Sections.astro";
import { Image } from 'astro:assets';
import coursPilate from "../../assets/images/cours-pilate.jpg"
import coursCollectif from "../../assets/images/cours-collectif.jpg"
---

<Sections fond="blanc">
    <div class="flex flex-col items-center">
        {/* BOX 1 COURS COLLECTIF */}
        <div class="w-full flex flex-col-reverse md:flex-row justify-center items-center">
            {/*  Text */}
            <div class="md:w-1/2 md:max-w-[640px] text-center p-8">
                <h2 class="font-title text-2xl md:text-4xl font-semibold">
                    COURS COLLECTIFS
                </h2>
                <div class="flex flex-col items-center gap-4 mt-4 text-lg">
                    <p class="pt-8">
                        Venez prendre un temps pour vous.
                    </p>
                    <p class="pt-2">
                        Cours collectifs en petit groupe de 6 personnes.
                    </p>
                </div>
            </div>

            {/* Image */}
            <div class="w-full md:w-1/2 max-h-[640px] flex justify-center">
                <Image
                    src={coursCollectif}
                    alt="groupe de personnes enlassés"
                    format="webp"
                />
            </div>
        </div>

        {/* BOX 2 PILATE */}
        <div class="w-full flex flex-col md:flex-row justify-center items-center">
            {/* Image */}
            <div class="w-full md:w-1/2 max-h-[640px] flex justify-center">
                <Image
                    src={coursPilate}
                    alt="personnes effectuant un cours de pylate by @jaspindersingh on unsplash"
                    format="webp"
                />
            </div>
            <div class="md:w-1/2 md:max-w-[640px] text-center p-8">
                {/* Text */}
                <h2 class="font-title text-2xl md:text-4xl font-semibold">
                    PILATES
                </h2>
                <div class="flex flex-col items-center gap-4 mt-4 text-lg">
                    <p class="pb-4">
                        La gym Pilâtes renforce tous les muscles
                        profonds, elle est axée sur la conscience du
                        corps et la colonne vertébrale via la
                        respiration.
                    </p>
                </div>
            </div>
        </div>
    </div>
</Sections>
---
import Sections from "../ui/Sections.astro";
import TitleSection from "../ui/TitleSection.astro";
import CardCoaching from "../ui/CardCoaching.astro";
import Plumes from "../ui/Plumes.astro";
import type { CardCoachingInfos } from "@/data/cardsType";

const CardsCoaching: CardCoachingInfos[] = [
    {
        imagePath: '/src/assets/coaching/card-nutrition.jpg',
        altText: 'coaching nutrition',
        titleCard: 'NUTRITION',
        introCard: 'Vous voulez:',
        liArr: ['▸ Perdre du poids ou en reprendre', '▸ Rééquilibrer votre flore intestinale', '▸ Retrouver la santé'],
        linkCard: "/coaching-nutrition"
    },
    {
        imagePath: '/src/assets/coaching/card-stress.jpg',
        altText: 'coaching gestion des stress',
        titleCard: 'GESTION des STRESS et des EMOTIONS',
        introCard: 'Vous souffrez de:',
        liArr: ['▸ Anxiétés, angoisses, insomnies', '▸ Migraines, acouphènes', '▸ Ulcère, contractures, spasmophilie...'],
        linkCard: "/coaching-gestion-stress"
    },
    {
        imagePath: '/src/assets/coaching/card-sport.jpg',
        altText: 'coaching sport',
        titleCard: 'SPORT SANTÉ',
        introCard: 'Vous sortez:',
        liArr: ['▸ D\’une longue période sans activité physique', '▸ D\'une opération', '▸ D\'un burn-out, maladie, autre ...'],
        linkCard: "/coaching-sport"
    },
]

---

<Sections fond="vert">
    <TitleSection>COACHING GLOBAL</TitleSection>
    <div class="container flex flex-col justify-center px-4 md:px-8 pb-10">
        <p class="pt-4 text-lg">
            Retrouvez votre bien-être naturel grâce à mon concept
            naturopathique des 3 piliers essentiels: Nutrition
            équilibrée, Gestion holistique du stress et des émotions, et
            Sport-santé adapté.
        </p>
        <p class="pt-4 pb-2 text-lg">
            Cette approche naturopathique complète vous guide vers
            l'autonomie de santé en vous apprenant à maîtriser votre
            alimentation saine, à gérer efficacement vos stress
            quotidiens et à prendre soin de votre corps par des méthodes
            naturelles.
        </p>
        <p class="pt-4 pb-10 text-lg">
            Une naturopathie personnalisée pour retrouver votre
            équilibre vital et prévenir les déséquilibres de santé.
        </p>
    </div>
    <div class="flex flex-col md:flex-row flex-wrap justify-around gap-10">
        {
            CardsCoaching.map((cardCoaching) => (
                <CardCoaching 
                    imagePath={cardCoaching.imagePath}
                    titleCard={cardCoaching.titleCard}
                    altText={cardCoaching.altText}
                    introCard={cardCoaching.introCard}
                    liArr={cardCoaching.liArr}
                    linkCard={cardCoaching.linkCard}  />
            ))
        }
    </div>
    <p class="px-8 pt-10 text-lg">
        Une hygiène de vie globale favorise le processus naturel de
        guérison existant en chacun de nous.
    </p>
    <Plumes />
</Sections>